<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
<!--  Defining :  SaveNoteServlet-->
  <servlet>
    <servlet-name>SaveNoteServlet</servlet-name>
    <servlet-class>com.servlets.SaveNoteServlet</servlet-class>
  </servlet>
<!--  Defining : DeleteServlet -->
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.servlets.DeleteServlet</servlet-class>
  </servlet>
<!--  Defining : UpdateServlet -->
  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>com.servlets.UpdateServlet</servlet-class>
  </servlet>

  
<!--  mapping : SaveNoteServlet-->
  <servlet-mapping>
    <servlet-name>SaveNoteServlet</servlet-name>
    <url-pattern>/SaveNoteServlet</url-pattern>
  </servlet-mapping>
  
<!--  mapping : DeleteServlet-->
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/DeleteServlet</url-pattern>
  </servlet-mapping>

<!--  mapping : UpdateServlet -->
  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/UpdateServlet</url-pattern>
  </servlet-mapping>

</web-app>
